<div class="reg-form col-sm-offset-4 col-sm-4 white-text" id="register">	
	<h2>Create Account</h2>

	<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>
	  	<div class="field">
		  <%= f.input :first_name, input_html: {class: 'form-control'}, label: 'First Name', required: true %>
	 	</div>
	 	<div class="field">
		  <%= f.input :last_name, input_html: {class: 'form-control'}, label: 'Last Name', required: true %>
		</div>
		<div class="field">
		  <%= f.input :user_name, input_html: {class: 'form-control'}, required: true %>
		</div>
		<div class="field">
		  <%= f.input :email, input_html: {class: 'form-control'}, placeholder: 'user@domain.com', required: true %>
		</div>
		<div class="field">
		  <%= f.input :password, input_html: {class: 'form-control'}, placeholder: 'Minimum 8 characters', required: true %>
		</div>
		<div class="field">
		  <%= f.input :password_confirmation, input_html: {class: 'form-control'}, required: true %>
		</div><br>

		  <%= f.button :submit, :class => 'btn btn-success' %>

	<% end %>
</div>
