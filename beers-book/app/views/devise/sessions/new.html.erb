<div class="col-sm-offset-4 col-sm-4 reg-form white-text" id="login">
  <h2>Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.input :email, label: 'email', input_html: {class: 'form-control'}, autofocus: true %>
    </div>

    <div class="field">
      <%= f.input :password, label: 'password', input_html: {class: 'form-control'}, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me, input_html: {class: 'form-control'} %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.button :submit, :class => 'btn btn-success' %>
    </div>
  <% end %>

<!-- <%= render "devise/shared/links" %> -->
</div>