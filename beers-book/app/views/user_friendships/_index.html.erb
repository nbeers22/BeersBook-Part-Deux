<% if @user_friendships %>
	<% @user_friendships.each do |friendship| %>
		<% friend = friendship.friend %>
		<div class="friend row" id="<%= dom_id(friendship) %>">
			<div class="col-sm-1">
				<%= link_to image_tage(gravatar_for(friend)), user_path(friend) %>
			</div>
			<div class="col-sm-7">
				<strong><%= friend.first_name.titleize %> <%= friend.last_name.titleize %></strong><br>
				<% if friendship.pending? %>
					<em>Friendship is pending.</em> <%= link_to "Delete", edit_user_friendship_path(friendship)  %>
				<% end %>
				<% if friendship.requested? %>
					 	<em>Friendship requested.</em> <%= link_to "Accept", edit_user_friendship_path(friendship) %>
				<% end %> 
				<% if friendship.accepted? %>
					<em>Friendship accepted <%= friendship.updated_at %>.</em> <%= link_to "Update friendship", edit_user_friendship_path(friendship)  %>
				<% end %>
			</div>
		</div>
	<% end %>
<% else %>
	<p>You currently have no friends.</p>
<% end %>
