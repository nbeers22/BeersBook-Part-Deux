<div class="row">
	<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
	    <div class="container">
			<div class="navbar-header">
	    	<%= link_to root_url do  %>
	    		<%= image_tag("big_black.jpg") %> 
	    	<% end %><span>BeersBook</span>
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
				  <span class="sr-only">Toggle navigation</span>
				  <span class="icon-bar"></span>
				  <span class="icon-bar"></span>
				  <span class="icon-bar"></span>
				</button>
			</div>

	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

			<ul class="nav navbar-nav navbar-right">
			<% if user_signed_in? %>
				<div class="dropdown" id="nav-dropdown">
				  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-expanded="true">
				      <%= gravatar_for(current_user) %> 
				      <span class="caret"></span>
				  </button>
				  <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
				    <li role="presentation">
				    	<%= link_to "Profile", user_path(current_user), :class => 'navbar-link pull-left', :role => "menuitem", :tabindex => '-1' %>
						<%= image_tag 'profile-icon.png', :class => 'profile-icon pull-right' %>
				    </li>
				    <li role="presentation">
				    	<%= link_to "Account", edit_user_registration_path(current_user), :class => 'navbar-link pull-left', :role => "menuitem", :tabindex => '-1' %>
						<%= image_tag 'account-icon.png', :class => 'profile-icon pull-right' %>
				    </li>
				    <li role="presentation">
				    	<%= link_to "Logout", destroy_user_session_path, :class => 'navbar-link pull-left', :role => "menuitem", :tabindex => '-1' %>
						<%= image_tag 'logout-icon.png', :class => 'profile-icon pull-right' %>
				    </li>
				  </ul>
				</div>
			<% else %>
			    <li><%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link sign-up'  %></li>
			    <li><%= link_to "Login", new_user_session_path, :class => 'navbar-link login'  %></li>
			<% end %>
			</ul>
	      </div><!-- /.navbar-collapse -->
	    </div>
	</nav>
</div>